{
  "info": {
    "name": "FastShop Authentication - CORRECTED",
    "description": "Corrected authentication endpoints with proper field names",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000",
      "type": "string"
    }
